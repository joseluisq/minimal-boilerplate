{
  "name": "minimal-boilerplate",
  "version": "1.0.0",
  "description": "Minimal Front-End boilerplate with npm run tasks built-in.",
  "scripts": {
    "build:js": "browserify -t [ babelify ] app/assets/scripts/main.js | uglifyjs --stats -vmc > dist/bundle.js",
    "build:css": "node-sass app/assets/style.scss dist/bundle.css && cleancss dist/bundle.css -do dist/bundle.css",
    "watch:js": "watchify -t [ babelify ] app/assets/scripts/main.js -o dist/bundle.js -dv",
    "watch:css": "node-sass app/assets/style.scss dist/bundle.css -w",
    "build": "npm run build:js & npm run build:css",
    "watch": "npm run watch:css & npm run watch:js",
    "server": "browser-sync start --server 'app' --server 'dist' --port 7001 --files 'app/{,*/}*.html' --files 'dist/bundle.css' --files 'dist/bundle.js' --files 'app/assets/images/{,*/}*.{gif,ico,jpg,jpeg,png,svg,webp}'",
    "dev": "npm run build:css && (npm run server & npm run watch)",
    "start": "npm run dev",
    "postinstall": "mkdir dist"
  },
  "keywords": [
    "boilerplate",
    "minimal",
    "tasks"
  ],
  "author": "Jos√© Luis Quintana <http://git.io/joseluisq>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joseluisq/minimal-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/joseluisq/minimal-boilerplate/issues"
  },
  "homepage": "https://github.com/joseluisq/minimal-boilerplate",
  "devDependencies": {
    "babel-cli": "^6.10.1",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-es2015": "^6.9.0",
    "babelify": "^7.3.0",
    "browser-sync": "^2.13.0",
    "browserify": "^13.0.1",
    "clean-css": "^3.4.18",
    "node-sass": "^3.8.0",
    "uglify-js": "^2.6.3",
    "watchify": "^3.7.0"
  }
}
